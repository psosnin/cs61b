public class Triangles {
   public static void drawTriangle(int N) {
       int count = 1;
       while (count < N) {
          int num = count;
          while (num > 0) {
             System.out.print("*");
                num = num - 1;
          }
          System.out.println("");
          count = count + 1; 
       }
    }
   
    public static void main(String[] args) {
       drawTriangle(10);
   }
   }
